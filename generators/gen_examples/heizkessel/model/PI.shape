shape PI_Vessel_Vertical {
    rounded-rectangle {
        size (width=120, height=60)
        curve (width=50, height=50)
        text {
            size (width=100, height=20)
            position (x=3, y=20)
            align (horizontal=center, vertical=middle)
            id = shapeName 
        }
    }
}

shape PI_Boiler {
	rounded-rectangle {
		curve(width=30,height=30)
        position (x=0, y=0)
        size (width=60, height=100)
    }
    polyline {
        point (x=90, y=70)
        point (x=30, y=70)
        point (x=50, y=50)
        point (x=30, y=30)
        point (x=90, y=30)
    }
    text {
    	position(x=60,y=0)
        size (width=100, height=20)
        id = shapeName
    }
    anchor {
        position (x=0, y=30)
        position (x=0, y=70)
        position (x=90, y=30)
        position (x=90, y=70)
    }
}

shape PI_CentralHeatingUnit {
    rounded-rectangle {
		curve(width=20,height=20)
        position (x=0, y=30)
        size (width=100, height=100)
    }
    polyline {
    	point (x=30, y=0)
    	point (x=30, y=70)
    	point (x=50, y=50)
    	point (x=70, y=70)
    	point (x=70, y=0)
    }
    text {
    	position(x=100,y=0)
        size (width=100, height=20)
        id = shapeName
    }
    rectangle {
    	position (x=25,y=100)
    	size(width=50,height=20)
    }
    anchor {
        position (x=30, y=0)
        position (x=70, y=0)
        position (x=25, y=110)
        position (x=75, y=110)
    }
}

shape PI_Vessel_Horizontal {
    rounded-rectangle {
